                        CornerRadius="15"
                        Background="SandyBrown">
                        <DockPanel
                            Margin="5">
                            <TextBlock
                                DockPanel.Dock="Bottom"
                                TextWrapping="Wrap"
                                TextAlignment="Center">
                                <Bold>Леденец</Bold><LineBreak/>50 руб.
                            </TextBlock>
                            <Image
                                Source="resourses/Lollipop.png"
                                Width="50"
                                Height="60"/>
                        </DockPanel>
                    </Border>
                    <Border
                        Width="80"
                        Height="80"
                        Opacity="90"
                        Margin="15 5 2 2"
                        CornerRadius="15"
                        Background="SandyBrown">
                        <DockPanel
                            Margin="5">
                            <TextBlock
                                DockPanel.Dock="Bottom"
                                TextWrapping="Wrap"
                                TextAlignment="Center">
                                <Bold>Леденец</Bold><LineBreak/>50 руб.
                            </TextBlock>
                            <Image
                                Source="resourses/Lollipop.png"
                                Width="50"
                                Height="60"/>
                        </DockPanel>
                    </Border>
                    <Border
                        Width="80"
                        Height="80"
                        Opacity="90"
                        Margin="15 5 2 2"
                        CornerRadius="15"
                        Background="SandyBrown">
                        <DockPanel
                            Margin="5">
                            <TextBlock
                                DockPanel.Dock="Bottom"
                                TextWrapping="Wrap"
                                TextAlignment="Center">
                                <Bold>Леденец</Bold><LineBreak/>50 руб.
                            </TextBlock>
                            <Image
                                Source="resourses/Lollipop.png"
                                Width="50"
                                Height="60"/>
                        </DockPanel>
                    </Border>
                    <Border
                        Width="80"
                        Height="80"
                        Opacity="90"
                        Margin="15 5 2 2"
                        CornerRadius="15"
                        Background="SandyBrown">
                        <DockPanel
                            Margin="5">
                            <TextBlock
                                DockPanel.Dock="Bottom"
                                TextWrapping="Wrap"
                                TextAlignment="Center">
                                <Bold>Леденец</Bold><LineBreak/>50 руб.
                            </TextBlock>
                            <Image
                                Source="resourses/Lollipop.png"
                                Width="50"
                                Height="60"/>
                        </DockPanel>
                    </Border>
                    <Border
                        Width="80"
                        Height="80"
                        Opacity="90"
                        Margin="15 5 2 2"
                        CornerRadius="15"
                        Background="SandyBrown">
                        <DockPanel
                            Margin="5">
                            <TextBlock
                                DockPanel.Dock="Bottom"
                                TextWrapping="Wrap"
                                TextAlignment="Center">
                                <Bold>Леденец</Bold><LineBreak/>50 руб.
                            </TextBlock>
                            <Image
                                Source="resourses/Lollipop.png"
                                Width="50"
                                Height="60"/>
                        </DockPanel>
                    </Border>
                    <Border
                        Width="80"
